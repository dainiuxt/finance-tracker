<% if !@friends.empty? %>
	<div class="form-group row mt-4">
		<div class="col-sm-9 no-right-padding">
			<table class="table table-sm table-hover">
			  <thead>
			    <tr>
			      <th scope="col">#</th>
			      <th scope="col">First name</th>
			      <th scope="col">Last name</th>
			      <th scope="col">Email</th>
			      <th scope="col">Unfollow</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @count = 0 %>
			  	<% @friends.each do |friend| %>
				    <tr>
				    	<th scope="row"><%= @count += 1 %></th>
				      <th><%= link_to "#{friend.first_name}", user_path(friend) %></th>
				      <td><%= friend.last_name %></td>
				      <td><%= friend.email %></td>
				      <td><%= link_to 'Unfollow', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-warning' %></td>
				    </tr>
				  <% end %>
			  </tbody>
			</table>
		</div>
	</div>
<% end %>
<% if @friends.empty? %>
	<div class="form-group row mt-4">
		<div class="col-sm-9 no-right-padding">
			Your have no friends yet.
 		</div>
	</div>
<% end %>